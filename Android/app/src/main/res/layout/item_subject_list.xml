<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_subject_background"
    android:orientation="vertical"
    android:layout_margin="10dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_subjectitem_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:fontFamily="@font/nanumsquareb"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:paddingLeft="20dp"
            android:text="오픈 소스"
            android:textColor="@color/mainColor"
            android:textSize="17dp" />

        <TextView
            android:id="@+id/tv_subjectitem_totalcount"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="45dp"
            android:fontFamily="@font/nanumsquarer"

            android:gravity="right|center_vertical"
            android:text="총원 : 85명"
            android:textColor="@color/black"
            android:textSize="12dp" />

    </FrameLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <Button
            android:id="@+id/bnt_subjectitem_timetable"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:fontFamily="@font/nanumsquarer"
            android:text="통합 시간표 확인"
            android:textSize="15dp" />

        <Button
            android:id="@+id/bnt_subjectitem_teamchat"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"

            android:fontFamily="@font/nanumsquarer"
            android:text="팀 채팅 만들기"
            android:textColor="@color/black"
            android:textSize="15dp" />

    </LinearLayout>



</LinearLayout>